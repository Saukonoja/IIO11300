<Window x:Class="Tehtava7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava7"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock >Password to check:</TextBlock>
            <PasswordBox x:Name="txtPassword" PasswordChanged="txtPassword_TextChanged"/>
            <TextBlock x:Name="tbChar">...</TextBlock>
            <TextBlock x:Name="tbLower">...</TextBlock>
            <TextBlock x:Name="tbUpper">...</TextBlock>
            <TextBlock x:Name="tbNumber">...</TextBlock>
            <TextBlock x:Name="tbSpecial">...</TextBlock>
            <TextBlock x:Name="tbResult" FontSize="50" Background="Gray">give password</TextBlock>
        </StackPanel>
    </Grid>
</Window>
