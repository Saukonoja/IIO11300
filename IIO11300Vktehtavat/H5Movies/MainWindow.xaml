<Window x:Class="H5Movies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:H5Movies"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="350" FontFamily="Showcard Gothic" FontSize="18">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Margin="10">Movies</TextBlock>
            <Button x:Name="btnOpenMovies1" Content="Simple moviegallery" Margin="10" Click="btnOpenMovies1_Click"/>
            <Button x:Name="btnOpenMovies2" Content="Moviegallery2 edit" Margin="10" Click="btnOpenMovies2_Click"/>
            <Button x:Name="btnClose" Content="Close" Margin="10" Click="btnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
