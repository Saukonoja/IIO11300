<Window x:Class="Tehtava5b.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava5b"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="150" Height="150">
            <TextBlock x:Name="tbTitle" Text="Snake" FontSize="25" HorizontalAlignment="Center"></TextBlock>
            <Button x:Name="btnStart" Content="Start Game" Width="70" Margin="5" Click="btnStart_Click" ></Button>
            <Button x:Name="btnClose" Content="Close Game" Width="70" Margin="5" Click="btnClose_Click" ></Button>
        </StackPanel>
    </Grid>
</Window>
